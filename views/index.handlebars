<audio id="myAudio">
  <source src="./assets/audio/tasty.mp3" type="audio/mp3">
  Your browser does not support the audio element.
</audio>
<div class="container">
  <video autoplay muted loop id="myVideo">
    <source src="./assets/videos/burger.mp4" type="video/mp4">
  </video>
    <div class="row">
      <div class="col col-centered">
        <h1>EAT THE BURGER</h1>
        <img src="./assets/img/burger.png">
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5">
          <ul class="no-bullets">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
      </div>
      <div class="col-5">
          <ul class="no-bullets">
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
      </div>
    </div>
    <div class="row">
      <div class="col col-centered" style="text-align: center;">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burger"></label>
            <input type="text" id="burger" name="name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
</div>